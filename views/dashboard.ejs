<div class="container white-text">
  <h1 class="center-align">Secrets Page</h1>
  <h3 class="center-align">See the secrets submitted by anonymous users.</h3>
  <%- include('./partials/messages') %>
</div>

<div class="container secrets">
  <% if(typeof users != 'undefined') { %> 
    <% users.forEach(function(user) { %>
      <% user.secrets.forEach(function(secret) { %>
        <% if(secret != "") {%>
          <div class="row">
            <div class="col s12 m12 l12">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <p>
                    <h5>"<%= secret %>"</h5>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      <% }) %> 
    <% }) %> 
  <% } %>
</div>

<div class="fixed-action-btn click-to-toggle">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">menu</i>
  </a>
  <ul>
    <li>
      <a
        class="btn-floating blue darken-1 tooltipped"
        data-position="left"
        data-tooltip="Add secret"
        href="/submit"
        ><i class="material-icons">note_add</i></a
      >
    </li>
    <li>
      <a
        class="btn-floating red tooltipped"
        data-position="left"
        data-tooltip="Logout"
        href="/logout"
        ><i class="material-icons">exit_to_app</i></a
      >
    </li>
  </ul>
</div>
